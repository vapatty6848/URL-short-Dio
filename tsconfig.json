{
	"compilerOptions": {
	  "target": "es2019",
	  "module": "commonjs",
	  "moduleResolution": "node",
	  "removeComments": true,
	  "esModuleInterop": true,
	  "emitDecoratorMetadata": true,
	  "experimentalDecorators": true,
	  "inlineSourceMap": true,
	  "noImplicitAny": true,
	  "noEmitOnError": true,
	  "noUnusedLocals": true,
	  "importHelpers": true,
	  "inlineSources": true,
	  "alwaysStrict": true,
	  "outDir": "./dist",
	  "skipLibCheck": true,
	},
	"include": ["test", "./src/**/*.ts"],
	"exclude": ["node_modules", "dist"]
  }